# Local Tracking System Environment Variables Template
# Copy this to .env.local and update with your actual keys

# Database Configuration (Local Testing with Docker)
DATABASE_URL="postgresql://tracking_user:tracking_pass@localhost:5434/ready_set_tracking?schema=public"
DIRECT_URL="postgresql://tracking_user:tracking_pass@localhost:5434/ready_set_tracking?schema=public"

# Redis Configuration (Optional for real-time tracking cache)
REDIS_URL="redis://localhost:6379"

# Supabase Configuration (Keep your existing production values for auth)
NEXT_PUBLIC_SUPABASE_URL="your_supabase_url_here"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key_here"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key_here"

# External API Keys (Add your actual keys)
GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"
MAPBOX_ACCESS_TOKEN="your_mapbox_token_here"

# Tracking System Specific
TRACKING_API_KEY="test_tracking_api_key_12345"

# Traccar Configuration (Optional - for external GPS tracking)
TRACCAR_URL="http://localhost:8082"
TRACCAR_USERNAME="admin"
TRACCAR_PASSWORD="admin"

# Real-time Configuration
WEBSOCKET_PORT=3002
REALTIME_UPDATE_INTERVAL=30000

# Development Configuration
NODE_ENV="development"
DEBUG_TRACKING=true
LOG_LEVEL="debug"

