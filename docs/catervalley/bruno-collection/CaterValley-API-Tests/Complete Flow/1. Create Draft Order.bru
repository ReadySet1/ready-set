meta {
  name: 1. Create Draft Order
  type: http
  seq: 1
}

post {
  url: {{BASE_URL}}/orders/draft
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  partner: {{PARTNER}}
  x-api-key: {{API_KEY}}
}

body:json {
  {
    "orderCode": "TEST-FLOW-{{$timestamp}}",
    "deliveryDate": "2025-11-21",
    "deliveryTime": "11:45",
    "totalItem": 1,
    "priceTotal": 16.75,
    "pickupLocation": {
      "name": "Thai Chili Express",
      "address": "304 E Santa Clara St",
      "city": "San Jose",
      "state": "CA",
      "zip": "95112",
      "phone": "(408) 555-0100"
    },
    "dropOffLocation": {
