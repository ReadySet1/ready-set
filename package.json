  "version": "2.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "build": "node scripts/prisma-setup.js && node scripts/type-check.js && next build",
    "build:no-typecheck": "node scripts/prisma-setup.js && SKIP_TYPECHECK=true next build",
    "build:sourcemaps": "npm run build && npm run sourcemaps",
    "sourcemaps": "npx @highlight-run/sourcemap-uploader upload --apiKey ${HIGHLIGHT_PROJECT_API_KEY:-\"\"} --path ./.next",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "node scripts/type-check.js",
    "pre-push-check": "pnpm typecheck && pnpm prisma generate && pnpm lint",
    "check-build": "./scripts/check-build.sh",
    "prepare": "husky",
    "backup": "dotenv -e .env.production tsx scripts/backup-db.ts",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest",
    "studio": "dotenv -e .env.local -- npx prisma studio",
    "db:generate": "dotenv -e .env.local -- npx prisma generate",
    "prisma": "prisma generate",
    "postinstall": "node scripts/prisma-setup.js",
    "vercel-build": "node scripts/prisma-setup.js && prisma db push && NODE_ENV=production next build",
    "vercel-sim": "node scripts/vercel-build-simulation.js",
    "type-check": "tsc --noEmit",
    "pre-push": "node scripts/type-check.js",
    "env:list": "tsx scripts/list-coolify-resources.ts",
    "env:sync": "tsx scripts/sync-env.ts"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
