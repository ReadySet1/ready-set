      "recipient": {
        "name": "Demo Account",
        "phone": "4085550200"
      }
    }
  }
}

docs {
  # Step 1: Create Draft Order
  
  This is the first step in the complete order flow.
  
  Save the `id` from the response to use in the next steps.
}

tests {
  test("Order created successfully", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().status).to.equal("SUCCESS");
  });
  
  test("Order ID is present", function() {
    expect(res.getBody().id).to.be.a('string');
    expect(res.getBody().id).to.have.lengthOf.above(0);
  });
  
  test("Delivery fee is $42.50", function() {
    expect(res.getBody().deliveryPrice).to.equal(42.50);
  });
}

script:post-response {
  // Save order ID for next request
  bru.setVar("orderId", res.getBody().id);
}

