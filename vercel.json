{
  "version": 2,
  "buildCommand": "pnpm run vercel-build",
  "outputDirectory": ".next",
  "installCommand": "PRISMA_SKIP_POSTINSTALL_GENERATE=true pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/admin/quarantine-cleanup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/admin/mileage-recalculation",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/admin/data-archiving",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/admin/driver-summary-generation",
      "schedule": "0 4 * * 0"
    }
  ],
  "env": {
    "PRISMA_SKIP_POSTINSTALL_GENERATE": "true"
  },
  "build": {
    "env": {
      "PRISMA_SKIP_POSTINSTALL_GENERATE": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0, max-age=0"
        }
      ]
    }
  ]
}
